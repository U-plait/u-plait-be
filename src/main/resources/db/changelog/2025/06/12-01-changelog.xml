<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1749691372214-11" author="student">
        <dropForeignKeyConstraint baseTableName="interest" constraintName="fk_interest_on_tag"/>
    </changeSet>
    <changeSet id="1749691372214-12" author="student">
        <dropForeignKeyConstraint baseTableName="interest" constraintName="fk_interest_on_user"/>
    </changeSet>
    <changeSet id="1749691372214-4" author="student">
        <createTable tableName="plan_tag">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_plan_tag"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="plan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749691372214-5" author="student">
        <createTable tableName="user_tag">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_tag"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749691372214-6" author="student">
        <addColumn tableName="plan">
            <column name="description" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1749691372214-7" author="student">
        <addForeignKeyConstraint baseColumnNames="plan_id" baseTableName="plan_tag" constraintName="FK_PLAN_TAG_ON_PLAN"
                                 referencedColumnNames="id" referencedTableName="plan"/>
    </changeSet>
    <changeSet id="1749691372214-8" author="student">
        <addForeignKeyConstraint baseColumnNames="tag_id" baseTableName="plan_tag" constraintName="FK_PLAN_TAG_ON_TAG"
                                 referencedColumnNames="id" referencedTableName="tag"/>
    </changeSet>
    <changeSet id="1749691372214-9" author="student">
        <addForeignKeyConstraint baseColumnNames="tag_id" baseTableName="user_tag" constraintName="FK_USER_TAG_ON_TAG"
                                 referencedColumnNames="id" referencedTableName="tag"/>
    </changeSet>
    <changeSet id="1749691372214-10" author="student">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_tag" constraintName="FK_USER_TAG_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1749691372214-13" author="student">
        <dropTable cascadeConstraints="true" tableName="interest"/>
    </changeSet>
    <changeSet id="1749691372214-14" author="student">
        <dropColumn columnName="combinability" tableName="plan"/>
    </changeSet>
    <changeSet id="1749691372214-1" author="student">
        <addNotNullConstraint columnDataType="VARCHAR(255)" columnName="content" tableName="review" validate="true"/>
    </changeSet>
    <changeSet id="1749691372214-2" author="student">
        <addNotNullConstraint columnDataType="INT" columnName="rating" tableName="review" validate="true"/>
    </changeSet>
    <changeSet id="1749691372214-3" author="student">
        <addNotNullConstraint columnDataType="VARCHAR(255)" columnName="title" tableName="review" validate="true"/>
    </changeSet>

</databaseChangeLog>